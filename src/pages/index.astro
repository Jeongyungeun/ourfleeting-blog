---
import Layout from "../layouts/Layout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

// 모든 콘텐츠 가져오기
const blogPosts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const projectPosts = (await getCollection("projects")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const marketingPosts = (await getCollection("marketing")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Featured (최신 블로그 포스트)
const featuredPost = blogPosts[0];
const recentPosts = blogPosts.slice(1, 7);

// 카테고리 추출 함수
function getCategory(postId: string): string {
	const parts = postId.split("/");
	return parts.length > 1 ? parts[0] : "life";
}

// 카테고리별 태그 클래스
const tagClasses: Record<string, string> = {
	work: "tag-work",
	family: "tag-family",
	life: "tag-life",
};

// 카테고리 라벨
const categoryLabels: Record<string, string> = {
	work: "Work",
	family: "Family",
	life: "Life",
};
---

<Layout>
	<div class="container-blog py-8 md:py-12">
		<!-- Hero Section: Featured Post -->
		{featuredPost && (
			<section class="mb-16">
				<a href={`/blog/${featuredPost.id}/`} class="block card-featured group">
					{featuredPost.data.heroImage && (
						<Image
							src={featuredPost.data.heroImage}
							alt={featuredPost.data.title}
							width={1200}
							height={675}
							class="w-full h-full object-cover"
						/>
					)}
					<div class="card-featured-overlay"></div>
					<div class="card-featured-content">
						<div class="flex items-center gap-3 mb-4">
							<span class={`tag ${tagClasses[getCategory(featuredPost.id)] || 'tag-life'}`}>
								{categoryLabels[getCategory(featuredPost.id)] || 'Life'}
							</span>
							<span class="text-sm text-white/80">
								<FormattedDate date={featuredPost.data.pubDate} />
							</span>
						</div>
						<h1 class="text-2xl md:text-4xl font-bold mb-3 group-hover:text-white/90 transition-colors">
							{featuredPost.data.title}
						</h1>
						<p class="text-white/80 text-sm md:text-base line-clamp-2 max-w-2xl">
							{featuredPost.data.description}
						</p>
					</div>
				</a>
			</section>
		)}

		<!-- Recent Posts Grid -->
		<section class="mb-16">
			<div class="flex items-center justify-between mb-8">
				<h2 class="text-2xl md:text-3xl font-bold text-primary">Recent Posts</h2>
				<a href="/blog" class="btn btn-ghost text-sm">
					View All
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
					</svg>
				</a>
			</div>

			<div class="posts-grid animate-stagger">
				{recentPosts.map((post) => {
					const category = getCategory(post.id);
					return (
						<a href={`/blog/${post.id}/`} class="post-card group">
							{post.data.heroImage && (
								<div class="post-card-image">
									<Image
										src={post.data.heroImage}
										alt={post.data.title}
										width={600}
										height={450}
									/>
								</div>
							)}
							<div class="post-card-content">
								<div class="flex items-center gap-2 mb-3">
									<span class={`tag ${tagClasses[category] || 'tag-life'}`}>
										{categoryLabels[category] || 'Life'}
									</span>
								</div>
								<h3 class="post-card-title">{post.data.title}</h3>
								<p class="post-card-excerpt">{post.data.description}</p>
								<div class="post-card-meta">
									<FormattedDate date={post.data.pubDate} />
								</div>
							</div>
						</a>
					);
				})}
			</div>
		</section>

		<!-- Categories Section -->
		<section class="mb-16">
			<h2 class="text-2xl md:text-3xl font-bold text-primary mb-8">Categories</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
				<!-- Blog -->
				<a href="/blog" class="card-base p-6 group">
					<div class="flex items-center gap-4 mb-4">
						<div class="w-12 h-12 rounded-xl bg-indigo-100 flex items-center justify-center">
							<svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
							</svg>
						</div>
						<div>
							<h3 class="font-semibold text-primary group-hover:text-accent transition-colors">Blog</h3>
							<p class="text-sm text-text-secondary">{blogPosts.length} posts</p>
						</div>
					</div>
					<p class="text-sm text-text-secondary">일상, 가족, 업무 이야기를 기록합니다</p>
				</a>

				<!-- Projects -->
				<a href="/projects" class="card-base p-6 group">
					<div class="flex items-center gap-4 mb-4">
						<div class="w-12 h-12 rounded-xl bg-pink-100 flex items-center justify-center">
							<svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
							</svg>
						</div>
						<div>
							<h3 class="font-semibold text-primary group-hover:text-accent transition-colors">Projects</h3>
							<p class="text-sm text-text-secondary">{projectPosts.length} projects</p>
						</div>
					</div>
					<p class="text-sm text-text-secondary">작업한 프로젝트들을 소개합니다</p>
				</a>

				<!-- Marketing -->
				<a href="/marketing" class="card-base p-6 group">
					<div class="flex items-center gap-4 mb-4">
						<div class="w-12 h-12 rounded-xl bg-violet-100 flex items-center justify-center">
							<svg class="w-6 h-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
							</svg>
						</div>
						<div>
							<h3 class="font-semibold text-primary group-hover:text-accent transition-colors">Marketing</h3>
							<p class="text-sm text-text-secondary">{marketingPosts.length} posts</p>
						</div>
					</div>
					<p class="text-sm text-text-secondary">마케팅 콘텐츠를 확인하세요</p>
				</a>
			</div>
		</section>

		<!-- Profile Section -->
		<section>
			<div class="profile-card">
				<div class="flex items-center gap-5">
					<div class="profile-avatar">
						LF
					</div>
					<div>
						<h3 class="text-xl font-bold text-primary">Like Flame</h3>
						<p class="text-text-secondary">일상의 소중한 순간들을 기록합니다</p>
					</div>
				</div>
				<div class="flex gap-3 md:ml-auto mt-4 md:mt-0">
					<a
						href="https://github.com/Jeongyungeun"
						target="_blank"
						rel="noopener noreferrer"
						class="social-link"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
						</svg>
					</a>
					<a
						href="https://instagram.com/ourfleeting"
						target="_blank"
						rel="noopener noreferrer"
						class="social-link"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"/>
						</svg>
					</a>
				</div>
			</div>
		</section>
	</div>
</Layout>
