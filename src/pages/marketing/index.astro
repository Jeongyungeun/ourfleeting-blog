---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";

const allPosts = (await getCollection("marketing")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Marketing" description="마케팅 인사이트">
	<section class="py-8">
		<h1 class="text-4xl font-bold text-slate-900 mb-8 text-center">
			마케팅
		</h1>

		<p class="text-center text-slate-600 mb-10 max-w-2xl mx-auto">
			마케팅 전략과 인사이트를 공유합니다.
		</p>

		<!-- 포스트 목록 -->
		<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				allPosts.map((post) => (
					<Card
						title={post.data.title}
						date={post.data.pubDate}
						body={post.data.description}
						href={`/marketing/${post.id}/`}
						image={post.data.heroImage}
					/>
				))
			}
		</ul>
	</section>
</Layout>
