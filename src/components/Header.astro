---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header
	class="sticky top-0 z-50 w-full backdrop-blur-lg bg-white/70 border-b border-slate-200 transition-all duration-300"
>
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex items-center justify-between h-16">
			<div class="flex-shrink-0">
				<a href="/" class="flex items-center gap-2 group">
					<!-- Logo Icon Placeholder -->
					<div
						class="w-8 h-8 rounded-xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-bold shadow-lg shadow-primary-500/30 group-hover:scale-105 transition-transform"
					>
						Z
					</div>
					<h2
						class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-slate-800 to-slate-600 tracking-tight"
					>
						{SITE_TITLE}
					</h2>
				</a>
			</div>
			<nav class="hidden md:flex space-x-8">
				<HeaderLink
					href="/"
					class="text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors"
					>Home</HeaderLink
				>
				<HeaderLink
					href="/blog"
					class="text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors"
					>Blog</HeaderLink
				>
				<HeaderLink
					href="/projects"
					class="text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors"
					>Projects</HeaderLink
				>
				<HeaderLink
					href="/about"
					class="text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors"
					>About</HeaderLink
				>
			</nav>
			<div class="flex items-center gap-4">
				<a
					href="https://github.com/Jeongyungeun"
					target="_blank"
					class="hidden sm:flex items-center justify-center w-9 h-9 rounded-full bg-slate-100 text-slate-500 hover:bg-primary-50 hover:text-primary-600 transition-all"
				>
					<span class="sr-only">Go to Astro's GitHub repo</span>
					<svg
						viewBox="0 0 16 16"
						aria-hidden="true"
						width="20"
						height="20"
						fill="currentColor"
					>
						<path
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</div>
</header>
