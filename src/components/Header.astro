---
import { SITE_TITLE } from "../consts";

const pathname = Astro.url.pathname;
const isActive = (href: string) => {
	if (href === '/') return pathname === '/';
	return pathname.startsWith(href);
};
---

<header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-border">
	<nav class="container-blog">
		<div class="flex items-center justify-between h-16">
			<!-- 로고 -->
			<a href="/" class="flex items-center gap-1.5 group">
				<span class="text-xl font-bold text-primary group-hover:text-accent transition-colors">Like</span>
				<span class="text-xl font-light text-text-secondary">Flame</span>
			</a>

			<!-- 중앙 네비게이션 -->
			<div class="hidden md:flex items-center gap-8">
				<a href="/" class:list={["nav-link", { "active text-primary": isActive('/') && pathname === '/' }]}>
					Home
				</a>
				<a href="/blog" class:list={["nav-link", { "active text-primary": isActive('/blog') }]}>
					Blog
				</a>
				<a href="/projects" class:list={["nav-link", { "active text-primary": isActive('/projects') }]}>
					Projects
				</a>
				<a href="/marketing" class:list={["nav-link", { "active text-primary": isActive('/marketing') }]}>
					Marketing
				</a>
				<a href="/about" class:list={["nav-link", { "active text-primary": isActive('/about') }]}>
					About
				</a>
			</div>

			<!-- 우측 아이콘 그룹 -->
			<div class="flex items-center gap-2">
				<!-- 소셜 링크 (데스크톱) -->
